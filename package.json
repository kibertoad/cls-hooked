    "node": ">=8.6.0"
  },
  "dependencies": {
    "emitter-listener": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "sinon": "^8.1.1",
    "sinon-chai": "^3.5.0",
    "superagent": "^5.2.2",
    "tap": "^12.7.0"
