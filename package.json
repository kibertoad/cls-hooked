  "description": "CLS using AsyncWrap instead of async-listener - Node >= 4.7.0",
  "main": "index.js",
  "files": [
    "index.js",
    "context.js"
  ],
  "scripts": {
    "debug": "node --nolazy --debug-brk=5858 ",
