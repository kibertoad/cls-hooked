    "test:tap": "tap test/tap/*.tap.js",
    "prettier": "prettier --write \"test/**/*.{js,ts}\" context.js index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeff-lewis/cls-hooked.git"
